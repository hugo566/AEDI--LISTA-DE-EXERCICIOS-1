#include <stdio.h>
#include <math.h>

int main() {
    float num1, num2;
    float produto_dobro, soma_triplo_metade, raiz_quadrada;

    printf("Digite o primeiro número real: ");
    scanf("%f", &num1);

    printf("Digite o segundo número real: ");
    scanf("%f", &num2);

   resultado 1= 2 * num1 * num2;
   resultado 2= (3 * num1) + (num2 / 2);
   resultado 3= sqrt(num1 + num2);
    

    // Exibe os resultados
    printf("O produto do dobro do primeiro número é: %.2f\n", produto_dobro);
    printf("A soma do triplo do primeiro número com a metade do segundo número é: %.2f\n", soma_triplo_metade);
    printf("A raiz quadrada da soma do primeiro número com o segundo número é: %.2f\n", raiz_quadrada);

    return 0;
}
